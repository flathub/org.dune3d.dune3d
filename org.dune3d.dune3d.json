{
    "app-id": "org.dune3d.dune3d",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "dune3d",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--filesystem=/run/spnav.sock:ro",
        "--env=SPNAV_SOCKET=/run/spnav.sock"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/share/oce-0.18",
        "/share/pkgconfig",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.78",
        "/lib/gtkmm-4.10",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0"
    ],
    "modules": [
        "gtkmm.json",
        {
            "name": "glm",
            "sources": [
                 {
                    "type": "archive",
                    "url": "https://github.com/g-truc/glm/archive/refs/tags/1.0.2.zip",
                    "sha256": "be64032585415ca7dbea0d614915bb8eec012adf7b4d4fea7ff6b5bd3e0b906a"
                }

            ],
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/share" ],
            "config-opts": [
                "-DGLM_TEST_ENABLE=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "opencascade",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.dev.opencascade.org/gitweb/?p=occt.git;a=snapshot;h=refs/tags/V7_9_2;sf=tgz",
                    "dest-filename": "opencascade.tgz",
                    "sha256": "b012222ddeb7c847325c1346eab8ec8c088834636e6063c2a3cb30641240d73c"
                }
            ],
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/share", "/bin" ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_RELEASE_DISABLE_EXCEPTIONS=OFF",
                "-DBUILD_LIBRARY_TYPE=Shared",
                "-DBUILD_Inspector=OFF",
                "-DBUILD_DOC_Overview=OFF",
                "-DBUILD_MODULE_ApplicationFramework=ON",
                "-DBUILD_MODULE_DataExchange=ON",
                "-DBUILD_MODULE_Draw=OFF",
                "-DBUILD_MODULE_FoundationClasses=ON",
                "-DBUILD_MODULE_ModelingAlgorithms=ON",
                "-DBUILD_MODULE_ModelingData=ON",
                "-DBUILD_MODULE_Visualization=OFF",
                "-DUSE_VTK=OFF",
                "-DUSE_TBB=OFF",
                "-DINSTALL_FREETYPE=OFF",
                "-DINSTALL_SAMPLES=OFF",
                "-DINSTALL_TEST_CASES=OFF"
            ]
        },
        {
            "name": "eigen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/libeigen/eigen/-/archive/3.4.1/eigen-3.4.1.tar.gz",
                    "sha256": "b93c667d1b69265cdb4d9f30ec21f8facbbe8b307cf34c0b9942834c6d4fdbe2",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://eigen.tuxfamily.org/index.php?title=Main_Page",
                        "version-pattern": "latest stable release</b> is Eigen ([\\d\\.-]+[\\d])",
                        "stable-only": true,
                        "url-template": "https://gitlab.com/libeigen/eigen/-/archive/$version/eigen-$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "libspnav",
            "config-opts": ["--disable-debug"],
            "sources": [
            {
              "type": "archive",
              "url": "https://github.com/FreeSpacenav/libspnav/archive/v1.2/libspnav-1.2.tar.gz",
              "sha256": "e675a2476bd407b8d97a33f93c6651ad3ecdfd422916f260bd620f2aec7ca45f"
            }
          ]
        },
        {
            "name": "dune3d",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/dune3d/dune3d/archive/refs/tags/v1.3.0.tar.gz",
                    "sha256": "a9c346005d260e7d9c4da2593d7683536536531fd6cad806bcfe2cf1c1c912e9"
                },
                {
                    "type":"patch",
                    "paths":["0001-welcome-window-fix-text-layout.patch"]
                }
            ]
        }

    ]
}
