{
    "app-id": "org.dune3d.dune3d",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "dune3d",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--device=dri",
        "--filesystem=/run/spnav.sock:ro",
        "--env=SPNAV_SOCKET=/run/spnav.sock"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/*/*.h",
        "/share/oce-0.18",
        "/share/pkgconfig",
        "/lib/atkmm-1.6",
        "/lib/cairomm-1.0",
        "/lib/gdkmm-3.0",
        "/lib/giomm-2.4",
        "/lib/glibmm-2.78",
        "/lib/gtkmm-4.10",
        "/lib/oce-0.18",
        "/lib/pangomm-1.4",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/lib/sigc++-3.0",
        "/lib/sigc++-2.0"
    ],
    "modules": [
        "gtkmm.json",
        {
            "name": "glm",
            "sources": [
                 {
                    "type": "archive",
                    "url": "https://github.com/g-truc/glm/archive/refs/tags/1.0.1.zip",
                    "sha256": "09c5716296787e1f7fcb87b1cbdbf26814ec1288ed6259ccd30d5d9795809fa5"
                }

            ],
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DGLM_TEST_ENABLE=OFF",
                "-DCMAKE_INSTALL_LIBDIR=lib"
            ]
        },
        {
            "name": "opencascade",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.dev.opencascade.org/gitweb/?p=occt.git;a=snapshot;h=refs/tags/V7_8_1;sf=tgz",
                    "dest-filename": "opencascade.tgz",
                    "sha256": "33f2bdb67e3f6ae469f3fa816cfba34529a23a9cb736bf98a32b203d8531c523"
                },
                {
                    "type":"patch",
                    "paths":["ft_outline.patch"]
                }
            ],
            "buildsystem": "cmake-ninja",
            "cleanup": [ "/share" ],
            "config-opts": [
                "-DBUILD_LIBRARY_TYPE=Shared",
                "-DBUILD_Inspector=OFF",
                "-DBUILD_DOC_Overview=OFF",
                "-DBUILD_MODULE_ApplicationFramework=ON",
                "-DBUILD_MODULE_DataExchange=ON",
                "-DBUILD_MODULE_Draw=OFF",
                "-DBUILD_MODULE_FoundationClasses=ON",
                "-DBUILD_MODULE_ModelingAlgorithms=ON",
                "-DBUILD_MODULE_ModelingData=ON",
                "-DBUILD_MODULE_Visualization=OFF",
                "-DUSE_VTK=OFF",
                "-DUSE_TBB=OFF",
                "-DINSTALL_FREETYPE=OFF",
                "-DINSTALL_SAMPLES=OFF",
                "-DINSTALL_TEST_CASES=OFF"
            ]
        },
        {
            "name": "eigen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.com/libeigen/eigen/-/archive/3.4.0/eigen-3.4.0.tar.gz",
                    "sha256": "8586084f71f9bde545ee7fa6d00288b264a2b7ac3607b974e54d13e7162c1c72",
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://eigen.tuxfamily.org/index.php?title=Main_Page",
                        "version-pattern": "latest stable release</b> is Eigen ([\\d\\.-]+[\\d])",
                        "stable-only": true,
                        "url-template": "https://gitlab.com/libeigen/eigen/-/archive/$version/eigen-$version.tar.gz"
                    }
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "libspnav",
            "config-opts": ["--disable-debug"],
            "sources": [
            {
              "type": "archive",
              "url": "https://github.com/FreeSpacenav/libspnav/archive/v1.1/libspnav-1.1.tar.gz",
              "sha256": "04b297f68a10db4fa40edf68d7f823ba7b9d0442f2b665181889abe2cea42759"
            }
          ]
        },
        {
            "name": "dune3d",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/dune3d/dune3d/archive/refs/tags/v1.2.0.tar.gz",
                    "sha256": "0a94daa4abd24cd8be1bc394f4d559298702c2e8e1e0855a08e413f7d24f270a"
                }
            ]
        }

    ]
}
